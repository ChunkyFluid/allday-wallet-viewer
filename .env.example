# ==================================================
# NFL All Day Wallet Viewer - Environment Configuration
# ==================================================
# Copy this file to .env and fill in your values

# ==================================================
# Server Configuration
# ==================================================
PORT=3000
SESSION_SECRET=change-this-to-a-random-secret-string

# ==================================================
# PostgreSQL Database (Render or local)
# ==================================================
PGHOST=your-postgres-host.render.com
PGPORT=5432
PGDATABASE=nflad
PGUSER=your_pg_user
PGPASSWORD=your_pg_password
PGSSLMODE=require

# ==================================================
# Snowflake (DEPRECATED - no longer required)
# App now uses real-time blockchain events + PostgreSQL
# Keep these only if you need historical Snowflake data access
# ==================================================
# SNOWFLAKE_ACCOUNT=abc-xy12345
# SNOWFLAKE_USERNAME=YOUR_USER
# SNOWFLAKE_PASSWORD=YOUR_PASSWORD
# SNOWFLAKE_WAREHOUSE=COMPUTE_WH
# SNOWFLAKE_DATABASE=FLOW_ONCHAIN_CORE_DATA
# SNOWFLAKE_SCHEMA=CORE
# SNOWFLAKE_ROLE=ACCOUNTADMIN


# ==================================================
# Flow Blockchain
# ==================================================
# Optional: Override default Flow access node
# FLOW_ACCESS_NODE=https://rest-mainnet.onflow.org

# ==================================================
# FindLabs API (optional, for NFT lookups)
# ==================================================
# FINDLAB_ENABLED=false
# FINDLABS_API_BASE=https://api.find.xyz
# FINDLABS_API_KEY=your_api_key
# FINDLABS_API_KEY_HEADER=Authorization
# FINDLABS_RATE_LIMIT_RPS=5
# FINDLABS_RETRY_LIMIT=3
# FINDLABS_NFT_TYPE=A.e4cf4bdc1751c65d.AllDay

# ==================================================
# NFL All Day API
# ==================================================
# Optional: Override default GraphQL endpoint
# NFLAD_GRAPHQL_URL=https://nflallday.com/consumer/graphql
# NFLAD_CONTRACT=0xe4cf4bdc1751c65d

# ==================================================
# Price Scraping (optional)
# ==================================================
# PRICE_MAX_EDITIONS=1000
# PRICE_DELAY_MS=100
# PRICE_CONCURRENCY=10